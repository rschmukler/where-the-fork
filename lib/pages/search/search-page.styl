#search-page
  form
    margin: 20px 0
    display: flex
    justify-content: center
    .icon-input
      flex: 7
      margin-right: 10px
      i
        color: $colors.fontLight
      input
        width: 100%
    button#search
      flex: 1

#search-box
  extend: %shadowed
  box-sizing: border-box
  background-color: white
  margin: auto
  padding: 20px
  h1,h2
    font-size: 2em
    margin: 0
    font-weight: 100
    text-align: center
  h2
    font-size: 1.3em
    margin: 0
    font-weight: 100
    text-align: center
    color: #777

  #locate-me
    left: auto
    right: 0.7em
    padding: 0.2em
    top: 0.8em
