html,body,#root
  padding: 0
  margin: 0
  height: 100%
  width: 100%
body
  background-color: #2d3e4f
  font-family: 'Helvetica Neue', 'Helvetica', arial, sans-serif
  color: #3d3d3d

@media(min-width: 1024px)
  #root
    margin: 20px auto
    width: 60%

input.nice
  box-shadow: inset 0px 1px 3px 1px rgba(black, 0.1)
  font-size: 1.4em
  border: 1px solid #ddd
  background-color: #eee
  padding: 0.4em 1em
